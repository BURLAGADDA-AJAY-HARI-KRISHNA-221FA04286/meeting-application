# =================================================================
# AI Meeting Intelligence System — Environment Configuration
# =================================================================

# ── Application Settings ──────────────────────────────────────
APP_NAME=AI Meeting Intelligence System
ENV=dev
DEBUG=false

# ── Security (REQUIRED) ───────────────────────────────────────
# Generate with: openssl rand -hex 32
SECRET_KEY=replace-with-64-char-random-secret
ACCESS_TOKEN_EXPIRE_MINUTES=360
REFRESH_TOKEN_EXPIRE_MINUTES=10080
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# ── Database ──────────────────────────────────────────────────
# SQLite (default): sqlite:///./meeting_intel.db
# PostgreSQL: postgresql+psycopg://user:password@host:5432/dbname
DATABASE_URL=sqlite:///./meeting_intel.db
DB_SSL_VERIFY=false

# ── AI / Gemini (REQUIRED for AI features) ───────────────────
# Get API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=replace-with-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.3
GEMINI_MAX_RETRIES=2

# ── CORS ──────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
CORS_ALLOW_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Authorization,Content-Type,Accept,Origin
TRUSTED_HOSTS=localhost,127.0.0.1
ALLOW_QUERY_TOKEN_AUTH=false

# ── Rate Limiting ─────────────────────────────────────────────
RATE_LIMIT_PER_MINUTE=60
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCK_MINUTES=15

# ── External Services (Optional) ──────────────────────────────
# Hugging Face token for speaker diarization (pyannote.audio)
# Get from: https://huggingface.co/settings/tokens
HF_API_KEY=replace-with-hugging-face-api-key

# GitHub Personal Access Token for issue export
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=replace-with-github-pat

# Jira Cloud credentials for issue export
# Base URL example: https://your-company.atlassian.net
JIRA_BASE_URL=
JIRA_PROJECT_KEY=
JIRA_EMAIL=
JIRA_API_TOKEN=

# ── RAG Settings ──────────────────────────────────────────────
RAG_CHUNK_SIZE=3
RAG_TOP_K=5
RAG_MODEL_NAME=all-MiniLM-L6-v2

# ── Redis / Celery (Optional, for background jobs) ───────────
REDIS_HOST=localhost
REDIS_PORT=6379
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/1

